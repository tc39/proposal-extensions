# See https://github.com/hax/dotfiles/tree/master/src/.editorconfig for commented edition
root = true
[*]
charset = utf-8
indent_style = tab
indent_size = 3
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
trim_trailing_newlines = true
max_line_length = 80
[*.{yaml,yml}]
indent_style = space
indent_size = 2
[*.{markdown,md}]
indent_size = 4